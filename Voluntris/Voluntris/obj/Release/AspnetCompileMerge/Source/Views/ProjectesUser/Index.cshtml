@model IEnumerable<Voluntris.Models.Projecte>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DelegacioProjecte.NomDelegacio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoriaProjecte.NomCategoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomProjecte)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DescripcioProjecte)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImatgeProjecte)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DelegacioProjecte.NomDelegacio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoriaProjecte.NomCategoria)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NomProjecte)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DescripcioProjecte)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ImatgeProjecte)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.ID }) 
        </td>
    </tr>
}

</table>
